# ============================================
# ESCALATING REMINDERS - WEB ENVIRONMENT
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ============================================
# API CONNECTION
# ============================================
# API server URL (where your NestJS backend runs)
# Local: http://localhost:3801
# Production: https://api.your-domain.com
NEXT_PUBLIC_API_URL=http://localhost:3801

# ============================================
# GOOGLE OAUTH (Client-side)
# ============================================
# Same as API - needed for OAuth flow
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ============================================
# ENVIRONMENT
# ============================================
# Environment indicator for debugging
NEXT_PUBLIC_ENV=development

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_OAUTH=true
NEXT_PUBLIC_ENABLE_BILLING=true

# ============================================
# PORT REFERENCE
# ============================================
# Web app runs on port 3800 by default
# Configure in package.json or next.config.js if needed
