{
  "name": "@er/web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3800",
    "build": "next build",
    "start": "next start -p 3800",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next coverage",
    "e2e": "playwright test --config=e2e/playwright.config.ts",
    "e2e:critical": "playwright test --config=e2e/playwright.config.ts --project=critical",
    "e2e:auth": "playwright test --config=e2e/playwright.config.ts --project=auth",
    "e2e:dashboard": "playwright test --config=e2e/playwright.config.ts --project=dashboard",
    "e2e:navigation": "playwright test --config=e2e/playwright.config.ts --project=navigation",
    "e2e:features": "playwright test --config=e2e/playwright.config.ts --project=features",
    "e2e:integration": "playwright test --config=e2e/playwright.config.ts --project=integration",
    "e2e:error": "playwright test --config=e2e/playwright.config.ts --project=error",
    "e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "e2e:headed": "playwright test --config=e2e/playwright.config.ts --headed",
    "e2e:report": "playwright show-report e2e-results/html",
    "e2e:codegen": "playwright codegen http://localhost:3800",
    "e2e:local": "E2E_ENV=local playwright test --config=e2e/playwright.config.ts",
    "e2e:staging": "E2E_ENV=staging playwright test --config=e2e/playwright.config.ts",
    "e2e:production": "E2E_ENV=production playwright test --config=e2e/playwright.config.ts",
    "e2e:smoke": "E2E_ENV=production playwright test --config=e2e/playwright.config.ts --project=critical --project=auth",
    "e2e:smoke:staging": "E2E_ENV=staging playwright test --config=e2e/playwright.config.ts --project=critical --project=auth"
  },
  "dependencies": {
    "@er/types": "workspace:*",
    "@er/constants": "workspace:*",
    "@er/utils": "workspace:*",
    "@er/ui-components": "workspace:*",
    "@er/api-client": "workspace:*",
    "@tanstack/react-query": "^5.8.0",
    "@tanstack/react-query-devtools": "^5.8.0",
    "@tanstack/react-table": "^8.11.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.3.0"
  }
}

